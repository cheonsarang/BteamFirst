<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".find.FindId2Fragment"
    android:orientation="vertical"
    android:layout_margin="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력하신 정보로"
        android:textSize="25dp"
        android:textColor="@color/chota_black"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입된 아이디를 찾았어요!"
        android:textSize="25dp"
        android:textColor="@color/chota_black"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="bottom"
            android:textColor="@color/chota_black"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김이름"
            android:textStyle="bold"
            android:textColor="@color/chota_black"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forward"
            android:layout_gravity="bottom"
            android:textColor="@color/chota_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님의 아이디는"
            android:textColor="@color/chota_black"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:elevation="1dp"
          android:padding="5dp"
          app:cardCornerRadius="5dp"
          android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcdefg"
            android:textStyle="bold"
            android:textColor="@color/chota_black"
            android:textSize="20dp"
            android:gravity="center"/>
      </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다"
            android:textColor="@color/chota_black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

     <LinearLayout
         android:id="@+id/linear_find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="200dp"
         android:gravity="center"
         android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기 "
            android:textColor="@color/chota_blue"
            android:textSize="17dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_forward"
            android:textStyle="bold"
            android:textColor="@color/chota_black"
            />
     </LinearLayout>

    <Button
        android:id="@+id/btn_loin_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="로그인으로 돌아가기"
        android:backgroundTint="@color/chota_blue"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/notosanskr_medium"
        />




</LinearLayout>