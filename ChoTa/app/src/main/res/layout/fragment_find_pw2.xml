<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".find.FindPw2Fragment"
    android:id="@+id/container">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문자로 온 인증번호를"
                android:textColor="@color/chota_black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="입력해주세요"
                android:textColor="@color/chota_black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginBottom="100dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tv_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="2"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/chota_black"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >

                    <TextView
                        android:id="@+id/tv_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="2"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/chota_black"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tv_num3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="2"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/chota_black"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <TextView
                        android:id="@+id/tv_num4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="2"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/chota_black"/>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="time"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="번호를 받지 못했나요? 다시 보내기"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="확인"
                android:backgroundTint="@color/chota_blue"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/notosanskr_medium"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>